package principal;

public class Comprobar {

	public static void main(String[] args) {
		int num=9;
		//si el numero es par nos muestra la mitad de ese numero
		//pero si es impar muestra la mitad del anterior
		if (num%2==0) {
			num=num/2;
		}else {
			num=--num/2;
		}
		System.out.println(num);

	}

}
